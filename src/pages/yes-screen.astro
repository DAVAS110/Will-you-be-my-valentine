---
import Layout from "../layouts/Layout.astro";
import background from "../assets/background.png";
import yess from "../assets/yess.jpg";
---

<Layout title="Thank youu!">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <section class="flex flex-col items-center justify-center min-h-screen w-full px-4 text-center">
    <div class="flex flex-col items-center justify-center w-full">
      <img class="max-w-[90%] max-h-[80vh]" src={yess.src} alt="" />
    </div>
    <div class="flex flex-col items-center justify-center w-full">
      <h2 class="font-NunitoExtraBold text-white text-5xl sm:text-6xl max-w-[90%] break-words overflow-hidden">
        Yeeeeeeeeeeesssssssssssssssssssss!!!!!!!!!!!!!!!!!!!!!!!!
      </h2>
    </div>
  </section>
</Layout>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  h2 {
    word-break: break-word;
  }
</style>
